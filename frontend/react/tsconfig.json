{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    "paths": {
      "shared/*": ["../shared/src/*"],
      "common/*": ["./src/common/*"],
      "features/*": ["./src/features/*"],
      "widgets/*": ["./src/widgets/*"],
      "pages/*": ["./src/pages/*"]
    },

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src", "../shared/src/troika-three-text.d.ts"],
  "exclude": [
    "**/*.tsbuildinfo",
    "**/vite.config.d.ts",
    "**/vite.config.js",
    "**/.cache/**/*",
    "**/.next/**/*",
    "**/build/**/*",
    "**/dist/**/*",
    "**/node_modules/**/*",
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
